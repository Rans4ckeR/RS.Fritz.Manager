<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:presentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:api="clr-namespace:RS.Fritz.Manager.API;assembly=RS.Fritz.Manager.API"
                    xmlns:ui="clr-namespace:RS.Fritz.Manager.UI"
                    mc:Ignorable="presentationOptions">
    <DataTemplate DataType="{x:Type api:CaptureInterfaceGroup}">
        <Border Style="{StaticResource BorderStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="{Binding Name}"/>
                <ItemsControl Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" ItemsSource="{Binding CaptureInterfaces}"/>
            </Grid>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:CaptureInterface}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Content="{Binding Name}"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Start" Command="{Binding RelativeSource={RelativeSource AncestorType=ui:CaptureControlCaptureView, Mode=FindAncestor}, Path=DataContext.CaptureInterfaceStartCommand}" CommandParameter="{Binding}"/>
            <Button Grid.Row="0" Grid.Column="2" Content="Stop" Command="{Binding RelativeSource={RelativeSource AncestorType=ui:CaptureControlCaptureView, Mode=FindAncestor}, Path=DataContext.CaptureInterfaceStopCommand}" CommandParameter="{Binding}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>