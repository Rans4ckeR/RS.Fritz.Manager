<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:api="clr-namespace:RS.Fritz.Manager.API;assembly=RS.Fritz.Manager.API"
                    xmlns:ui="clr-namespace:RS.Fritz.Manager.UI">
    <DataTemplate DataType="{x:Type api:HostsGetHostNumberOfEntriesResponse}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=HostNumberOfEntries}" Content="_HostNumberOfEntries" ToolTip="Number of entries in the Host table."/>
            <TextBlock x:Name="HostNumberOfEntries" Grid.Row="0" Grid.Column="1" Text="{Binding HostNumberOfEntries}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:HostsGetInfoResponse}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=FriendlynameMinChar}" Content="_FriendlynameMinChar"/>
            <TextBlock x:Name="FriendlynameMinChar" Grid.Row="0" Grid.Column="1" Text="{Binding FriendlynameMinChar}"/>
            <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=FriendlynameMaxChars}" Content="_FriendlynameMaxChars"/>
            <TextBlock x:Name="FriendlynameMaxChars" Grid.Row="1" Grid.Column="1" Text="{Binding FriendlynameMaxChars}"/>
            <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=HostnameMinChars}" Content="_HostnameMinChars"/>
            <TextBlock x:Name="HostnameMinChars" Grid.Row="2" Grid.Column="1" Text="{Binding HostnameMinChars}"/>
            <Label Grid.Row="3" Grid.Column="0" Target="{Binding ElementName=HostnameMaxChars}" Content="_HostnameMaxChars"/>
            <TextBlock x:Name="HostnameMaxChars" Grid.Row="3" Grid.Column="1" Text="{Binding HostnameMaxChars}"/>
            <Label Grid.Row="4" Grid.Column="0" Target="{Binding ElementName=HostnameAllowedChars}" Content="_HostnameAllowedChars"/>
            <TextBlock x:Name="HostnameAllowedChars" Grid.Row="4" Grid.Column="1" Text="{Binding HostnameAllowedChars}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:HostsGetChangeCounterResponse}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=ChangeCounter}" Content="_ChangeCounter"/>
            <TextBlock x:Name="ChangeCounter" Grid.Row="0" Grid.Column="1" Text="{Binding ChangeCounter}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:HostsGetFriendlyNameResponse}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=FriendlyName}" Content="_FriendlyName" ToolTip="The own friendly name of the requesting client."/>
            <TextBlock x:Name="FriendlyName" Grid.Row="0" Grid.Column="1" Text="{Binding FriendlyName}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:HostsGetGenericHostEntryResponse}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=IpAddress}" Content="_IpAddress" ToolTip="Current IP Address of the host."/>
            <TextBlock x:Name="IpAddress" Grid.Row="0" Grid.Column="1" Text="{Binding IpAddress}"/>
            <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=MacAddress}" Content="_MacAddress" ToolTip="MAC address of the host."/>
            <TextBlock x:Name="MacAddress" Grid.Row="1" Grid.Column="1" Text="{Binding MacAddress}"/>
            <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=AddressSource}" Content="_AddressSource" ToolTip="Indicates whether the IP address of the host was allocated by the CPE using DHCP or was assigned to the host statically. Possible values are DHCP, Static, AutoIP."/>
            <TextBlock x:Name="AddressSource" Grid.Row="2" Grid.Column="1" Text="{Binding AddressSource}"/>
            <Label Grid.Row="3" Grid.Column="0" Target="{Binding ElementName=LeaseTimeRemaining}" Content="_LeaseTimeRemaining" ToolTip="DHCP lease time remaining in seconds. The value must be 0 (zero) if the AddressSource is not DHCP. -1 = Infinite lease."/>
            <TextBlock x:Name="LeaseTimeRemaining" Grid.Row="3" Grid.Column="1" Text="{Binding LeaseTimeRemaining}"/>
            <Label Grid.Row="4" Grid.Column="0" Target="{Binding ElementName=InterfaceType}" Content="_InterfaceType" ToolTip="Type of physical interface through which the host is connected to the CPE. Possible values are Ethernet, USB, 802.11, HomePNA, HomePlug, Other."/>
            <TextBlock x:Name="InterfaceType" Grid.Row="4" Grid.Column="1" Text="{Binding InterfaceType}"/>
            <Label Grid.Row="5" Grid.Column="0" Target="{Binding ElementName=Active}" Content="_Active" ToolTip="Whether or not the host is currently present on the LAN. The method of presence detection is a local matter to the CPE."/>
            <TextBlock x:Name="Active" Grid.Row="5" Grid.Column="1" Text="{Binding Active}"/>
            <Label Grid.Row="6" Grid.Column="0" Target="{Binding ElementName=HostName}" Content="_HostName" ToolTip="The device's host name or empty string if unknown. Max length = 64 characters."/>
            <TextBlock x:Name="HostName" Grid.Row="6" Grid.Column="1" Text="{Binding HostName}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceHostInfo}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="HostListPath">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=HostListPath}" Content="_HostListPath"/>
                    <TextBlock x:Name="HostListPath" Grid.Row="0" Grid.Column="1" Text="{Binding HostListPath}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=HostListPathLink}" Content="_HostListPathLink"/>
                    <ContentControl x:Name="HostListPathLink" ContentTemplate="{StaticResource UrlDataTemplate}" Content="{Binding HostListPathLink}" Grid.Row="1" Grid.Column="1"/>
                    <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=DeviceHosts}" Content="_DeviceHosts"/>
                    <ui:NoScrollDataGrid x:Name="DeviceHosts" Grid.Row="2" Grid.Column="1" ItemsSource="{Binding DeviceHosts}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshInfo}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="MeshListPath">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=MeshListPath}" Content="_MeshListPath"/>
                    <TextBlock x:Name="MeshListPath" Grid.Row="0" Grid.Column="1" Text="{Binding MeshListPath}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=MeshListPathLink}" Content="_MeshListPathLink"/>
                    <ContentControl x:Name="MeshListPathLink" ContentTemplate="{StaticResource UrlDataTemplate}" Content="{Binding MeshListPathLink}" Grid.Row="1" Grid.Column="1"/>
                    <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=DeviceMesh}" Content="_DeviceMesh"/>
                    <ContentControl x:Name="DeviceMesh" Grid.Row="2" Grid.Column="1" Content="{Binding DeviceMesh}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMesh}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=SchemaVersion}" Content="_SchemaVersion" ToolTip="Schema Version used for the FRITZ!OS topology JSON dump."/>
            <TextBlock x:Name="SchemaVersion" Grid.Row="0" Grid.Column="1" Text="{Binding SchemaVersion}"/>
            <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=Nodes}" Content="_Nodes" ToolTip="List of all involved devices."/>
            <ItemsControl x:Name="Nodes" Grid.Row="1" Grid.Column="1" ItemsSource="{Binding Nodes}"/>
        </Grid>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNode}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="Node">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=Uid}" Content="_Uid" ToolTip="Unique identifier of the device."/>
                    <TextBlock x:Name="Uid" Grid.Row="0" Grid.Column="1" Text="{Binding Uid}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=DeviceFriendlyName}" Content="_DeviceFriendlyName" ToolTip="Friendly name of the device."/>
                    <TextBlock x:Name="DeviceFriendlyName" Grid.Row="1" Grid.Column="1" Text="{Binding DeviceFriendlyName}"/>
                    <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=DeviceName}" Content="_DeviceName" ToolTip="Name of the device."/>
                    <TextBlock x:Name="DeviceName" Grid.Row="2" Grid.Column="1" Text="{Binding DeviceName}"/>
                    <Label Grid.Row="3" Grid.Column="0" Target="{Binding ElementName=DeviceVendorClassId}" Content="_DeviceVendorClassId" ToolTip="Vendor class identifier of the device learned via DHCP."/>
                    <TextBlock x:Name="DeviceVendorClassId" Grid.Row="3" Grid.Column="1" Text="{Binding DeviceVendorClassId}"/>
                    <Label Grid.Row="4" Grid.Column="0" Target="{Binding ElementName=DeviceModel}" Content="_DeviceModel" ToolTip="Device model, e.g. FRITZ!Box 7590."/>
                    <TextBlock x:Name="DeviceModel" Grid.Row="4" Grid.Column="1" Text="{Binding DeviceModel}"/>
                    <Label Grid.Row="5" Grid.Column="0" Target="{Binding ElementName=DeviceManufacturer}" Content="_DeviceManufacturer" ToolTip="Device manufacturer, e.g. AVM."/>
                    <TextBlock x:Name="DeviceManufacturer" Grid.Row="5" Grid.Column="1" Text="{Binding DeviceManufacturer}"/>
                    <Label Grid.Row="6" Grid.Column="0" Target="{Binding ElementName=DeviceFirmwareVersion}" Content="_DeviceFirmwareVersion" ToolTip="Device firmware version, e.g. 154.06.92-57341."/>
                    <TextBlock x:Name="DeviceFirmwareVersion" Grid.Row="6" Grid.Column="1" Text="{Binding DeviceFirmwareVersion}"/>
                    <Label Grid.Row="7" Grid.Column="0" Target="{Binding ElementName=DeviceMacAddress}" Content="_DeviceMacAddress" ToolTip="MAC address of the device."/>
                    <TextBlock x:Name="DeviceMacAddress" Grid.Row="7" Grid.Column="1" Text="{Binding DeviceMacAddress}"/>
                    <Label Grid.Row="8" Grid.Column="0" Target="{Binding ElementName=DeviceId}" Content="_DeviceId" ToolTip="(Non-)unique identifier of the device which represents a chassis ID according to LLDP (IEEE-802.1AB-2016, 8.5.2.3 chassis ID)."/>
                    <ContentControl x:Name="DeviceId" Grid.Row="8" Grid.Column="1" Content="{Binding DeviceId}"/>
                    <Label Grid.Row="9" Grid.Column="0" Target="{Binding ElementName=DeviceCapabilities}" Content="_DeviceCapabilities" ToolTip="Capabilities of the device according to LLDP (IEEE-802.1AB-2016, 8.5.8.1 system capabilities)."/>
                    <ItemsControl x:Name="DeviceCapabilities" Grid.Row="9" Grid.Column="1" ItemsSource="{Binding DeviceCapabilities}"/>
                    <Label Grid.Row="10" Grid.Column="0" Target="{Binding ElementName=EnabledDeviceCapabilities}" Content="_EnabledDeviceCapabilities" ToolTip="Enabled capabilities of the device according to LLDP (IEEE-802.1AB-2016, 8.5.8.2 enabled capabilities)."/>
                    <ItemsControl x:Name="EnabledDeviceCapabilities" Grid.Row="10" Grid.Column="1" ItemsSource="{Binding EnabledDeviceCapabilities}"/>
                    <Label Grid.Row="11" Grid.Column="0" Target="{Binding ElementName=IsMeshed}" Content="_IsMeshed" ToolTip="Indicates the device is part of AVM mesh."/>
                    <TextBlock x:Name="IsMeshed" Grid.Row="11" Grid.Column="1" Text="{Binding IsMeshed}"/>
                    <Label Grid.Row="12" Grid.Column="0" Target="{Binding ElementName=MeshRole}" Content="_MeshRole" ToolTip="The AVM mesh role of the device. Possible values are unknown, master, slave."/>
                    <TextBlock x:Name="MeshRole" Grid.Row="12" Grid.Column="1" Text="{Binding MeshRole}"/>
                    <Label Grid.Row="13" Grid.Column="0" Target="{Binding ElementName=MeshdVersion}" Content="_MeshdVersion" ToolTip="The version of the meshd on this device; 0.0 if unknown."/>
                    <TextBlock x:Name="MeshdVersion" Grid.Row="13" Grid.Column="1" Text="{Binding MeshdVersion}"/>
                    <Label Grid.Row="14" Grid.Column="0" Target="{Binding ElementName=DeviceMeshNodeMetrics}" Content="_DeviceMeshNodeMetrics" ToolTip="Current metrics of this node."/>
                    <ContentControl x:Name="DeviceMeshNodeMetrics" Grid.Row="14" Grid.Column="1" Content="{Binding DeviceMeshNodeMetrics}"/>
                    <Label Grid.Row="15" Grid.Column="0" Target="{Binding ElementName=NodeInterfaces}" Content="_NodeInterfaces" ToolTip="List of all available interfaces of this device."/>
                    <ItemsControl x:Name="NodeInterfaces" Grid.Row="15" Grid.Column="1" ItemsSource="{Binding NodeInterfaces}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNodeDeviceId}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="DeviceId">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=Subtype}" Content="_Subtype" ToolTip="Subtype according to LLDP (IEEE-802.1AB-2016, 8.5.2.2 chassis ID subtype)."/>
                    <TextBlock x:Name="Subtype" Grid.Row="0" Grid.Column="1" Text="{Binding Subtype}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=Value}" Content="_Value" ToolTip="A value that matches subtype, e.g. 'E0:28:6D:76:3C:7C' if subtype is 'MAC_ADDRESS' or '192.168.178.1' if subtype is 'NETWORK_ADDRESS'."/>
                    <TextBlock x:Name="Value" Grid.Row="1" Grid.Column="1" Text="{Binding Value}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNodeMetrics}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="Metric">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=WanCounters}" Content="_WanCounters" ToolTip="WAN counters of this node."/>
                    <ContentControl x:Name="WanCounters" Grid.Row="0" Grid.Column="1" Content="{Binding WanCounters}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNodeMetricsWanCounters}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="WanCounter">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=LastUpdate}" Content="_LastUpdate" ToolTip="UNIX timestamp in milliseconds of the last time the WAN counters were updated."/>
                    <TextBlock x:Name="LastUpdate" Grid.Row="0" Grid.Column="1" Text="{Binding LastUpdate}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=Bytes}" Content="_Bytes" ToolTip="Number of bytes this node has received from/sent to the WAN."/>
                    <ContentControl x:Name="Bytes" Grid.Row="1" Grid.Column="1" Content="{Binding Bytes}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNodeMetricsWanCountersBytes}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="Bytes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=Received}" Content="_Received" ToolTip="Number of bytes received from the WAN at the IP layer."/>
                    <TextBlock x:Name="Received" Grid.Row="0" Grid.Column="1" Text="{Binding Received}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=Sent}" Content="_Sent" ToolTip="Number of bytes sent to the WAN at the IP layer."/>
                    <TextBlock x:Name="Sent" Grid.Row="1" Grid.Column="1" Text="{Binding Sent}"/>
                </Grid>
            </Expander>
        </Border>
    </DataTemplate>
    <DataTemplate DataType="{x:Type api:DeviceMeshNodeInterface}">
        <Border Style="{StaticResource BorderStyle}">
            <Expander Header="NodeInterface">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Target="{Binding ElementName=Uid}" Content="_Uid" ToolTip="Unique identifier of this interface."/>
                    <TextBlock x:Name="Uid" Grid.Row="0" Grid.Column="1" Text="{Binding Uid}"/>
                    <Label Grid.Row="1" Grid.Column="0" Target="{Binding ElementName=Name}" Content="_Name" ToolTip="Interface name."/>
                    <TextBlock x:Name="Name" Grid.Row="1" Grid.Column="1" Text="{Binding Name}"/>
                    <Label Grid.Row="2" Grid.Column="0" Target="{Binding ElementName=Type}" Content="_Type" ToolTip="Interface type, e.g. LAN or WLAN. Possible values are unknown, LAN, WLAN, PLC, DECT."/>
                    <TextBlock x:Name="Type" Grid.Row="2" Grid.Column="1" Text="{Binding Type}"/>
                    <Label Grid.Row="3" Grid.Column="0" Target="{Binding ElementName=MacAddress}" Content="_MacAddress" ToolTip="Interface MAC address. Might be zero for unconfigured interfaces."/>
                    <TextBlock x:Name="MacAddress" Grid.Row="3" Grid.Column="1" Text="{Binding MacAddress}"/>
                    <Label Grid.Row="4" Grid.Column="0" Target="{Binding ElementName=NodeUid}" Content="_NodeUid" ToolTip="Unique identifier of the associated node."/>
                    <TextBlock x:Name="NodeUid" Grid.Row="4" Grid.Column="1" Text="{Binding NodeUid}"/>
                    <Label Grid.Row="5" Grid.Column="0" Target="{Binding ElementName=BlockingState}" Content="_BlockingState" ToolTip="Indicates if this interface has been blocked for traffic flow to prevent a network loop. Possible values are UNKNOWN, NOT_BLOCKED, BLOCKED."/>
                    <TextBlock x:Name="BlockingState" Grid.Row="5" Grid.Column="1" Text="{Binding BlockingState}"/>
                    <Label Grid.Row="6" Grid.Column="0" Target="{Binding ElementName=LinkDetected}" Content="_LinkDetected" ToolTip="LAN: Has a link been detected on this interface?"/>
                    <TextBlock x:Name="LinkDetected" Grid.Row="6" Grid.Column="1" Text="{Binding LinkDetected}"/>
                    <Label Grid.Row="7" Grid.Column="0" Target="{Binding ElementName=CurrentDataRate}" Content="_CurrentDataRate" ToolTip="LAN: Current data rate in kbit/s."/>
                    <TextBlock x:Name="CurrentDataRate" Grid.Row="7" Grid.Column="1" Text="{Binding CurrentDataRate}"/>
                    <Label Grid.Row="8" Grid.Column="0" Target="{Binding ElementName=CurrentReceiveAvailability}" Content="_CurrentReceiveAvailability" ToolTip="LAN: Current rx interface availability in percent."/>
                    <TextBlock x:Name="CurrentReceiveAvailability" Grid.Row="8" Grid.Column="1" Text="{Binding CurrentReceiveAvailability}"/>
                    <Label Grid.Row="9" Grid.Column="0" Target="{Binding ElementName=CurrentSendAvailability}" Content="_CurrentSendAvailability" ToolTip="LAN: Current tx interface availability in percent."/>
                    <TextBlock x:Name="CurrentSendAvailability" Grid.Row="9" Grid.Column="1" Text="{Binding CurrentSendAvailability}"/>
                    <Label Grid.Row="10" Grid.Column="0" Target="{Binding ElementName=LldpActive}" Content="_LldpActive" ToolTip="LAN: Does this LAN interface speak LLDP?"/>
                    <TextBlock x:Name="LldpActive" Grid.Row="10" Grid.Column="1" Text="{Binding LldpActive}"/>
                    <Label Grid.Row="11" Grid.Column="0" Target="{Binding ElementName=MldMacAddress}" Content="_MldMacAddress" ToolTip="MLD MAC address this interface is affiliated with, according to IEEE 802.11be D3.0)."/>
                    <TextBlock x:Name="MldMacAddress" Grid.Row="11" Grid.Column="1" Text="{Binding MldMacAddress}"/>
                    <Label Grid.Row="12" Grid.Column="0" Target="{Binding ElementName=LinkId}" Content="_LinkId" ToolTip="Link ID iff interface is in MLO, according to IEEE 802.11be D3.0 Link ID (35.3.3.2)."/>
                    <TextBlock x:Name="LinkId" Grid.Row="12" Grid.Column="1" Text="{Binding LinkId}"/>
                    <Label Grid.Row="13" Grid.Column="0" Target="{Binding ElementName=UplinkTtlm}" Content="_UplinkTtlm" ToolTip="Shows uplink TID to link mapping for MLD."/>
                    <TextBlock x:Name="UplinkTtlm" Grid.Row="13" Grid.Column="1" Text="{Binding UplinkTtlm}"/>
                    <Label Grid.Row="14" Grid.Column="0" Target="{Binding ElementName=DownlinkTtlm}" Content="_DownlinkTtlm" ToolTip="Shows downlink TID to link mapping for MLD."/>
                    <TextBlock x:Name="DownlinkTtlm" Grid.Row="14" Grid.Column="1" Text="{Binding DownlinkTtlm}"/>
                    <Label Grid.Row="15" Grid.Column="0" Target="{Binding ElementName=Ssid}" Content="_Ssid" ToolTip="WLAN: SSID name. Might be empty for unconfigured interfaces."/>
                    <TextBlock x:Name="Ssid" Grid.Row="15" Grid.Column="1" Text="{Binding Ssid}"/>
                    <Label Grid.Row="16" Grid.Column="0" Target="{Binding ElementName=Opmode}" Content="_Opmode" ToolTip="WLAN: Operation mode of this interface, e.g. AP, WDS_REPEATER."/>
                    <TextBlock x:Name="Opmode" Grid.Row="16" Grid.Column="1" Text="{Binding Opmode}"/>
                    <Label Grid.Row="17" Grid.Column="0" Target="{Binding ElementName=Security}" Content="_Security" ToolTip="WLAN: Security algorithm, e.g. NONE, WPA2PSK."/>
                    <TextBlock x:Name="Security" Grid.Row="17" Grid.Column="1" Text="{Binding Security}"/>
                    <Label Grid.Row="18" Grid.Column="0" Target="{Binding ElementName=CurrentChannel}" Content="_CurrentChannel" ToolTip="WLAN: Currently used WLAN center channel."/>
                    <TextBlock x:Name="CurrentChannel" Grid.Row="18" Grid.Column="1" Text="{Binding CurrentChannel}"/>
                    <Label Grid.Row="19" Grid.Column="0" Target="{Binding ElementName=CurrentChannelInfo}" Content="_CurrentChannelInfo" ToolTip="WLAN: Description of the currently used WIFI channel."/>
                    <ContentControl x:Name="CurrentChannelInfo" Grid.Row="19" Grid.Column="1" Content="{Binding CurrentChannelInfo}"/>
                    <Label Grid.Row="20" Grid.Column="0" Target="{Binding ElementName=RadioId}" Content="_RadioId" ToolTip="ID of the radio this interface is associated with."/>
                    <ItemsControl x:Name="RadioId" Grid.Row="20" Grid.Column="1" ItemsSource="{Binding RadioId}"/>
                    <Label Grid.Row="21" Grid.Column="0" Target="{Binding ElementName=ChannelUtilization}" Content="_ChannelUtilization" ToolTip="WLAN: Percentage value of current channel utilization."/>
